<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFAB91"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="362dp"
        android:layout_height="178dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:text="Привет доргой друг! Это твой математический помощник.Тут есть справочник, тест, решение задач и калькулятор который тебе может помочь в трудных вычеслениях"
        android:textColor="#6A1B9A"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.659"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="160dp"
        android:layout_height="155dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"
        android:background="#B39DDB"
        android:onClick="button0"
        android:shadowColor="#0091EA"
        android:text="Калькулятор"
        android:textColor="#111010"
        android:textColorHighlight="#0091EA"
        android:textColorHint="#0091EA"
        android:textColorLink="#0091EA"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button2"
        android:layout_width="147dp"
        android:layout_height="153dp"
        android:layout_marginTop="48dp"
        android:background="#B39DDB"
        android:onClick="button2"
        android:text="Тест(сложно)"
        android:textColor="#0F0E0E"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button3"
        android:layout_width="148dp"
        android:layout_height="158dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:background="#B39DDB"
        android:onClick="button"
        android:text="Справочник"
        android:textColor="#141416"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button4"
        android:layout_width="146dp"
        android:layout_height="149dp"
        android:layout_marginTop="48dp"
        android:background="#B39DDB"
        android:onClick="button1"
        android:text="Задачник"
        android:textColor="#151516"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

</androidx.constraintlayout.widget.ConstraintLayout>