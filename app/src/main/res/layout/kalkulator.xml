<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFAB91"
    android:orientation="vertical"
    tools:context=".Main3Activity">

    <EditText
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="#00BBBABA"
        android:gravity="center_horizontal"
        android:hint="Первое число"
        android:textColor="#0C0C0C"
        android:textColorHint="#4527A0"
        android:textSize="24sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#00F8F6F6"
        android:gravity="center_horizontal"
        android:hint="Второе число"
        android:textColor="#00FDFAFA"
        android:textColorHint="#4527A0"
        android:textSize="24sp" />

    <Button
        android:id="@+id/plus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B39DDB"
        android:onClick="sum"
        android:text="Сложить"
        android:textColor="#131212"
        android:textColorHint="#161515" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/minus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B39DDB"
        android:onClick="otnat"
        android:text="Отнять" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/ymnogit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B39DDB"
        android:onClick="proizvedenie"
        android:text="Умножить" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/delit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B39DDB"
        android:onClick="chastnoe"
        android:text="Разделить" />

    <TextView
        android:id="@+id/outresult"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:gravity="center_horizontal"
        android:hint="Результат"
        android:textColorHint="#4527A0"
        android:textSize="24sp" />


</LinearLayout>